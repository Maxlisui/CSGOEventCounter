@{
    Layout = null;
    string imgStyle = "height: 242, width: 200";
    var allMaps = ViewBag.AllMaps;
    var mapsInfo = ViewBag.MapsInfo;
}
<html>
<head>
    <title>Team Details</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/darkly/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-S7YMK1xjUjSpEnF4P8hPUcgjXYLZKK3fQW1j5ObLSl787II9p8RO9XUGehRmKsxd" crossorigin="anonymous">
</head>
<body>
    <div id="content" class="container">
        <div class="row">
            <div class="col-lg-12">
                @if(ViewBag.TeamDetail != null)
                {
                    <h1>@ViewBag.TeamDetail.Name Overview</h1>
                    <div class="col-lg-4">
                        <ul class="list-group">
                            <li class="list-group-item list-group-item-info">Country: @ViewBag.TeamDetail.Country</li>
                        </ul>
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h3 class="panel-title">Logo</h3>
                            </div>
                            <div class="panel-body">
                                <img src=@ViewBag.TeamDetail.Logo height="242" width="242" align="middle" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        @for(var i = 0; i < allMaps.Length; i++)
                        {
                            <div class="col-lg-4">
                                <div class="panel panel-warning">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">@allMaps[i].Name</h3>
                                    </div>
                                    <div class="panel-body">
                                        <p>Times attacked A site: @mapsInfo[i,0]</p>
                                        <p>Times attacked B site: @mapsInfo[i,1]</p>
                                        <p>Times attacked successfully A site: @mapsInfo[i,2]</p>
                                        <p>Times attacked successfully B site: @mapsInfo[i,3]</p>
                                        <p>Times retaken A site: @mapsInfo[i,4]</p>
                                        <p>Times retaken B site: @mapsInfo[i,5]</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>