@{
    Layout = null;
    string imgStyle = "height: 242, width: 200";
}
<html>
<head>
    <title>Event Recorder</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/darkly/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-S7YMK1xjUjSpEnF4P8hPUcgjXYLZKK3fQW1j5ObLSl787II9p8RO9XUGehRmKsxd" crossorigin="anonymous">
</head>
<body>
    <div id="content" class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Add a Team to the event</h1>
                @if(ViewBag.TeamsNotAttending.Count == 0)
                {
                    <div class="alert alert-dismissible alert-danger">
                        <strong>Oh snap!</strong> <p>There is no team left. All of them are participating.</p>
                    </div>
                }
                else
                {
                     @foreach(var t in ViewBag.TeamsNotAttending)
                     {
                         <div class="col-sm-7 col-md-3">
                            <div class="thumbnail">
                                <img style=@imgStyle src=@t.Logo />
                                <div class="caption">
                                    <h3>@t.Name</h3>
                                    <p>Country: @t.Country</p>
                                    <p><a href="/Team/AddToEvent?teamId=@t.Id&eventId=@ViewBag.CurrentEventId" 
                                    class="btn btn-success center-block" role="button">Add</a></p>
                                </div>
                            </div>
                        </div>
                     }
                }
            </div>
        </div>
    </div>
</body>